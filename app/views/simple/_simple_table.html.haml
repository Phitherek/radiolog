%table.simple_table
  %thead
    %tr
      %th= t(".to_callsign")
      %th= t(".rst_to")
      %th= t(".rst_from")
      %th= t(".name")
      %th= t(".qth")
      %th= t(".utc_date")
      %th= t(".utc_time")
      %th= t(".qsl")
  %tbody
    - @entries.each do |entry|
      %tr
        %td= entry.to_callsign
        %td= entry.rst_to
        %td= entry.rst_from
        %td= entry.name
        %td= entry.qth
        %td= entry.utc.to_date
        %td= format_time(entry.utc)
        %td= t("qsl." + entry.qsl.to_s)